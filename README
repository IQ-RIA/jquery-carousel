$(function() {
	CoolStore = Ext.extend(CJ.Carousel.Store, {
		loadPage: function(pageNumber) {
			$.ajax({
				url      : 'server.php',
				context  : this,
				type     : "GET",
				data     : 'page='+pageNumber,
				dataType : 'json',
				success  : $.proxy(this.pageLoaded, this)
			});
		}
	})

	Carousel = Ext.extend(CJ.Carousel.Carousel, {
		store: new CoolStore(),
		createMarkup: function() {
			this.el = $(
				'<div class="s36-carousel-root-' + this.settings.cols + '-cols ' + this.settings.theme + '">'+
					'<div class="s36-carousel-root-wrapper ' + this.settings.theme + '">'+
						'<ul class="s36-carousel-root ' + this.settings.theme + '"></ul>'+
					'</div>'+
			   '</div>'
			);

			this.el.appendTo(this.parentEl);
			return this.el;
		}
	});

	carousel = new Carousel({
		placeHolder: '#carousel',
		settings: {
			rows: 1,
			cols: 3,
			theme: "cj-default"
		},
		renderers: {
			item: {
				createItem : function(item) {
					return "<img src='data:image/png;base64,' /><br/><span>" + item.title + "</span>"
				}
			}
		}
	});

	$('#goToPageBtn').click(function(){
		carousel.movePage($('#pageNum').val()-0);
	});
});
